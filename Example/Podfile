platform :ios, '10.0'
use_frameworks!

target 'ViteBusiness_Example' do
  pod 'ViteBusiness', :path => '../'
#  pod 'ViteUtils', :git => 'https://github.com/vitelabs/vite-utils-ios.git', :commit => '62af5410efd9368709b8fe6e4cfbf15616474ef5'
  pod 'ViteWallet', :git => 'https://github.com/vitelabs/vite-wallet-ios.git', :commit => '363fcd9e3759aa9619f1a4d1ca8c6d0f23268cfc'
  pod 'ViteEthereum', :git => 'https://github.com/vitelabs/vite-ethereum-ios.git',:commit => '6ddc0b795c65a7a34e84aa196c76f179e032ed97'
  pod 'Vite_GrinWallet', :git => 'https://github.com/vitelabs/Vite_GrinWallet.git', :commit => '5219021d0f7e0db3443500eca1a5146c3ed30163'
  pod 'Vite_HDWalletKit', :git => 'https://github.com/vitelabs/vite-keystore-ios.git', :commit => '14d8e1d4f26e27e92439c688b8c65a029c8395f9'

  

  target 'ViteBusiness_Tests' do
    inherit! :search_paths
    pod 'R.swift', '5.0.0.alpha.3'

    pod 'FBSnapshotTestCase' , '~> 2.1.4'
  end
end

target 'UpdateRswift' do
  pod 'R.swift', '5.0.0.alpha.3'
end

post_install do |installer|
    installer.pods_project.targets.each do |target|
        if ['RazzleDazzle', 'JSONRPCKit', 'APIKit'].include? target.name
            target.build_configurations.each do |config|
                config.build_settings['SWIFT_VERSION'] = '4.0'
            end
        end
    end
end
